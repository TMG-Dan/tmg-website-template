# ===========================================
# TMG Website Template - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Payload CMS
# Generate a random secret: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-at-least-32-characters

# Database (Payload uses SQLite by default, no config needed for local dev)
# For production, configure your database connection string
# DATABASE_URI=file:./payload.db

# Convex
# Get these from your Convex dashboard at https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=prod:your-deploy-key

# Resend (Email)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key

# Contact form notification email
CONTACT_EMAIL=notifications@yourdomain.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My Website

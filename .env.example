# ===========================================
# TMG Website Template - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Payload CMS
# Generate a random secret: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-at-least-32-characters

# Turso Database
# Get these from your Turso dashboard at https://turso.tech
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Resend (Email)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key

# Contact form notification email
CONTACT_EMAIL=notifications@yourdomain.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My Website
